// src/assets/styles/mixins.styl
@import './theme.styl';
cleanDefaultStyle()
    appearance: none
    border: none
    outline: none

btn(c,border = false)
    padding: 0 10px
    border-radius: 5px
    cursor pointer
    cleanDefaultStyle()

    if(border == true)
        border: 1px solid c
        color: $red
    else
        background-color: c
        color: #fff

primaryBtn()
    btn($lightred)

primaryBorderBtn()
    btn($lightred, true)



infoBtn()
    btn($purple)
    font-family: "Lucida Console", Courier, monospace
